<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.UrlFragment"
    android:background="@color/white">

    <EditText
        android:id="@+id/etUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Your URL or Link."
        android:textColorHint="@color/paste_url_to_check_color"
        android:drawableStart="@drawable/icons8_link_24"
        android:padding="10dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/gilroy_extra_bold"
        android:textSize="20sp"
        android:textColor="@color/paste_url_to_check_color"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_check_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUrl"
        android:layout_marginTop="20dp"
        android:text="check the url"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:fontFamily="@font/gilroy_extra_bold"
        android:id="@+id/btCheck"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

    <ProgressBar
        android:layout_width="279dp"
        android:layout_height="279dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:progressDrawable="@drawable/progress_bar_circular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="25%"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:background="@drawable/score_background"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/gilroy_extra_bold"
        app:layout_constraintBottom_toBottomOf="parent"/>
    

